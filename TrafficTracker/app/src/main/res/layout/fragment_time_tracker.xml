<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/time_tracker_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@string/time_tracker_intro_text"
            android:textSize="@dimen/font_large" />

        <EditText
            android:id="@+id/time_tracker_source_address"
            style="@style/AddressPickerTextTheme"
            android:hint="Select Source" />

        <EditText
            android:id="@+id/time_tracker_destination_address"
            style="@style/AddressPickerTextTheme"
            android:hint="Select Destination" />

        <Button
            android:id="@+id/time_tracker_search_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_height_tall"
            android:layout_gravity="center_horizontal"
            android:text="Search" />

    </LinearLayout>
</ScrollView>